  <image id="battery-icon" href="images/walk-blue.png" height="24" width="24"  x="50%-14" y="50%+47" class="foreground" />
  <text id="steps" class="foreground"/>
  
<!-- Heart Rate   -->
  <image id="heart" href="images/heart-pulse-red.png" height="24" width="24"  x="40%-45" y="50%+46" class="foreground" />
  <text id="myHeartRate" class="background"/>
