<svg>
  <g transform="rotate(180)">
  <rect id="step-bar" width="10%" height="10%" x="90%" y="0" fill="red"/>
    <line x1="100%" x2="90%" y1="0%" y2="0%" fill="red" stroke-width="3"/>
    <line x1="100%" x2="90%" y1="100%" y2="100%" fill="red" stroke-width="3"/>
    <line x1="100%" x2="100%" y1="0%" y2="100%" fill="red" stroke-width="3"/>
    <line x1="90%" x2="90%" y1="0%" y2="100%" fill="red" stroke-width="3"/>
  </g>
</svg>
<svg>
  <rect id="cal-bar" width="10%" height="20%" x="80%" y="0" fill="#FFAAAA" />
    <line x1="90%" x2="80%" y1="0%" y2="0%" fill="orange" stroke-width="3"/>
    <line x1="90%" x2="80%" y1="100%" y2="100%" fill="orange" stroke-width="3"/>
    <line x1="90%" x2="90%" y1="0%" y2="100%" fill="orange" stroke-width="3"/>
    <line x1="80%" x2="80%" y1="0%" y2="100%" fill="orange" stroke-width="3"/>
</svg>

<svg>
  <rect id="activity-bar" width="10%" height="20%" x="10%" y="0" fill="green" />
    <line x1="20%" x2="10%" y1="0%" y2="0%" fill="green" stroke-width="3"/>
    <line x1="20%" x2="10%" y1="100%" y2="100%" fill="green" stroke-width="3"/>
    <line x1="20%" x2="20%" y1="0%" y2="100%" fill="green" stroke-width="3"/>
    <line x1="10%" x2="10%" y1="0%" y2="100%" fill="green" stroke-width="3"/>
</svg>
<svg>
  <rect id="distance-bar" width="10%" height="20%" x="0%" y="0" fill="#00FFFF" />
    <line x1="10%" x2="0%" y1="0%" y2="0%" fill="blue" stroke-width="3"/>
    <line x1="10%" x2="0%" y1="100%" y2="100%" fill="blue" stroke-width="3"/>
    <line x1="10%" x2="10%" y1="0%" y2="100%" fill="blue" stroke-width="3"/>
    <line x1="0%" x2="0%" y1="0%" y2="100%" fill="blue" stroke-width="3"/>
</svg>

  
